include /mixins/body
include /mixins/title

doctype html
html
  head
    meta(charset='utf-8')
    link(rel='stylesheet' href='/application.css')
    != '<!--[if lt IE 9]>'
    script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js' type='text/javascript')
    script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js' type='text/javascript')
    != '<![endif]-->'
    +title
  +body
    include /partials/header
    block content
    include /partials/footer
    script(src='/application.js' type='text/javascript')
